-- Brookhaven Admin GUI 2025 (com escolha de player)
-- ‚ö†Ô∏è Use com executor (Synapse X, Script-Ware, etc)

local plr = game.Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")

ScreenGui.Parent = game.CoreGui
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.Position = UDim2.new(0.3, 0, 0.2, 0)
Frame.Size = UDim2.new(0, 350, 0, 550)
UICorner.Parent = Frame

-- Campo de texto para escolher player
local PlayerBox = Instance.new("TextBox")
PlayerBox.Parent = Frame
PlayerBox.Size = UDim2.new(0, 330, 0, 40)
PlayerBox.Position = UDim2.new(0, 10, 0, 10)
PlayerBox.PlaceholderText = "Digite o nome do player"
PlayerBox.TextColor3 = Color3.fromRGB(255,255,255)
PlayerBox.BackgroundColor3 = Color3.fromRGB(40,40,40)

-- Fun√ß√£o para pegar player pelo nome digitado
function getTarget()
    local name = PlayerBox.Text
    for _, p in pairs(game.Players:GetPlayers()) do
        if string.find(string.lower(p.Name), string.lower(name)) then
            return p
        end
    end
    return nil
end

-- Fun√ß√£o criar bot√µes
function criarBotao(nome, y, func)
    local btn = Instance.new("TextButton")
    btn.Parent = Frame
    btn.Size = UDim2.new(0, 330, 0, 40)
    btn.Position = UDim2.new(0, 10, 0, y)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Text = nome
    btn.MouseButton1Click:Connect(func)
end

-- üü¢ PODERES PESSOAIS
criarBotao("Fly", 60, function()
    loadstring(game:HttpGet("https://pastebin.com/raw/YxU1c4jj"))()
end)

criarBotao("Noclip", 110, function()
    loadstring(game:HttpGet("https://pastebin.com/raw/5j4p3L8F"))()
end)

criarBotao("Speed x5", 160, function()
    plr.Character.Humanoid.WalkSpeed = 80
end)

criarBotao("Teleport Base", 210, function()
    plr.Character.HumanoidRootPart.CFrame = CFrame.new(0, 50, 0)
end)

criarBotao("Size Grande", 260, function()
    plr.Character.Humanoid.BodyHeightScale.Value = 3
end)

criarBotao("Size Pequeno", 310, function()
    plr.Character.Humanoid.BodyHeightScale.Value = 0.5
end)

-- üî¥ OP√á√ïES DE TROLL (usando o player digitado)
criarBotao("Explodir Player", 360, function()
    local target = getTarget()
    if target and target.Character then
        Instance.new("Explosion", workspace).Position = target.Character.HumanoidRootPart.Position
    end
end)

criarBotao("Congelar Player", 410, function()
    local target = getTarget()
    if target and target.Character then
        for _, part in pairs(target.Character:GetDescendants()) do
            if part:IsA("BasePart") then
                part.Anchored = true
            end
        end
    end
end)

criarBotao("Prender Player", 460, function()
    local target = getTarget()
    if target and target.Character then
        target.Character.HumanoidRootPart.CFrame = plr.Character.HumanoidRootPart.CFrame * CFrame.new(0,0,3)
    end
end)

criarBotao("Teleportar Player at√© Voc√™", 510, function()
    local target = getTarget()
    if target and target.Character then
        target.Character.HumanoidRootPart.CFrame = plr.Character.HumanoidRootPart.CFrame
    end
end)

-- ‚ùå FECHAR
criarBotao("Fechar Painel", 560, function()
    ScreenGui:Destroy()
end)
